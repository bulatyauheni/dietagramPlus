<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <RelativeLayout android:layout_width="fill_parent" android:id="@+id/relativeLayout1" android:layout_height="wrap_content" android:background="@drawable/vk">
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:textColor="@color/white" android:textStyle="bold" android:textSize="20dip" android:shadowColor="#000000" android:shadowDx="1.2" android:shadowDy="1.2" android:shadowRadius="1.2" android:text="@string/vk"></TextView>
        <ProgressBar android:id="@+id/progressBar1" style="?android:attr/progressBarStyleSmall" android:layout_alignParentRight="true" android:layout_width="30dip" android:layout_height="30dip" android:layout_centerVertical="true" android:layout_marginRight="15dip"></ProgressBar>
    </RelativeLayout>
  <RelativeLayout android:layout_width="fill_parent" android:id="@+id/relativeLayout2" android:layout_height="wrap_content" android:background="@color/white">
      <WebView android:layout_width="fill_parent" android:id="@+id/webview" android:layout_height="fill_parent"></WebView>
      <TextView android:layout_height="wrap_content" android:text="TextView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_width="fill_parent" android:layout_margin="15dip" android:id="@+id/textViewText" android:textColor="@color/black" android:textSize="17dip" android:visibility="invisible" android:textStyle="bold"></TextView>
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:layout_below="@+id/textViewText" android:layout_alignLeft="@+id/buttonShare" android:layout_marginBottom="15dip" android:id="@+id/textViewLink" android:textColor="@color/grey" android:visibility="invisible" android:textSize="16dip"></TextView>
      <Button android:layout_width="fill_parent" android:id="@+id/buttonShare" android:text="@string/button_share" android:layout_height="wrap_content" android:visibility="invisible" android:layout_below="@+id/textViewLink" android:layout_alignLeft="@+id/textViewText" android:layout_alignRight="@+id/textViewText"></Button>
  </RelativeLayout>
    
</LinearLayout>
